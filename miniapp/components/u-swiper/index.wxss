.swiper-item {
  width: 100%;
  height: calc(100% - 40rpx);
  transform: scale(1);
  transition: 0.25s;
  margin-top: 20rpx;
  background: #fff;
  position: relative;
}

.active.swiper-item {
  transform: scale(0.9);
}

.active.shadow.swiper-item {
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.5);
}

.radius {
  border-radius: 10rpx;
}

.active.swiper-value {
  opacity: 1;
}

.swiper-value {
  position: absolute;
  z-index: 1;
  bottom: 0;
  width: 100%;
  height: 70rpx;
  color: #fff;
  box-sizing: border-box;
  display: flex;
  padding: 0 30rpx;
  background: rgba(0, 0, 0, 0.25);
  font-size: 30rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  opacity: 0;
  transition: 0.25s;
}

.radius .swiper-value {
  border-radius: 0 0 10rpx 10rpx;
}

.none.swiper-value {
  background: rgba(0, 0, 0, 0);
}

.swiper-value .p {
  width: 520rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}