@import "/assets/fonts/default/iconfont.wxss";

.search-g {
  width: 100%;
  height: 108rpx;
  background: var(--main-bg-color);
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.search {
  background:  var(--main-bg-color);
}

.search-btn {
  width: 128rpx;
  height: 100%;
  background: #FFFFFF;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 20rpx;
  align-items: center;
  border-radius: 4prx;
  color: #333;
}

.theme .search-btn {
  color: var(--main-bg-color);
}

.screen-btn {
  font-size: 22rpx;
}

.search-icon {
  width: 100rpx;
  height: 68rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #888;
}

.search {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-radius: 4prx;
  width: 100%;
}

.screen .search {
  width: calc(100% - 148rpx);
}