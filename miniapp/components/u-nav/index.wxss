.head-group {
  width: 100%;
  position: fixed;
  top: 0;
  background: #fff;
  z-index: 2;
  box-sizing: border-box;
}

.head-group.theme {
  background: var(--main-bg-color);
}

.iconfont-view {
  height: 100% !important;
  display: flex;
  width: 100% !important;
  justify-content: center;
  align-items: center;
  position: relative;
  font-size: 24rpx;
}

.iconfont {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  position: relative;
  background: rgba(0, 0, 0, 0);
  box-sizing: border-box;
  font-size: 24rpx;
  border: 0.7px solid rgba(229, 229, 229, 0.5);
}

.theme .iconfont {
  background: rgba(0, 0, 0, 0.1);
  border: 0.7px solid rgba(229, 229, 229, 0.5);
}

.head-view {
  width: 100%;
  display: flex;
  height: 100%;
  position: relative;
  overflow: hidden;
  flex-direction: row;
}

.icon-view {
  width: 200rpx;
  background: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: absolute;
  z-index: 1;
}

.icon-back {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333;
}


.ios .icon-back .iconfont-view .iconfont {
  border: 0.7rpx solid rgba(229, 229, 229, 1);
}

.ios.theme .icon-back .iconfont-view .iconfont {
  background: rgba(0, 0, 0, 0.1);
  border: 0.7rpx solid rgba(229, 229, 229, 1);
}

.theme .icon-back {
  color: #fff;
}

.icon-back .iconarrow-r::after {
  position: absolute;
  right: calc(100% - 1px);
  width: 1px;
  height: 32rpx;
  top: 50%;
  margin-top: -16rpx;
  background: rgba(255, 255, 255, 0.6) !important;
  transform: scale(0.8, 1);
  content: '';
}

.icon-back .l {
  transform-origin: center center;
  transform: rotate(180deg);
}

.head-title {
  width: calc(100% - 420rpx);
  margin-left: 210rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 2px;
}

.head-title-inner {
  overflow: hidden;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 30rpx;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.head-title.an {
  position: absolute;
  left: 0;
  height: calc(100% - 2px);
}

.head-group.theme .head-title {
  color: #fff;
}