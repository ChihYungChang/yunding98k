.list {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.list.column {
  flex-direction: column;
}

.list.column .list-pic {
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.list.column .list-view {
  width: 100%;
}

.list-pic {
  width: 200rpx;
  height: 150rpx;
  border-radius: 6rpx;
  overflow: hidden;
}

.list-pic.big {
  height: 250rpx;
}

.list-view.big {
  height: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start
}

.list-view {
  width: calc(100% - 225rpx);
  height: 100%;
}

.list-view-none {
  width: 100%;
  height: 100%;
}

.list-view-title {
  width: 100%;
  font-size: 30rpx;
  color: #000;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.list-view-p {
  width: 100%;
  color: #999999;
  font-size: 24rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  min-height: 60rpx;
}