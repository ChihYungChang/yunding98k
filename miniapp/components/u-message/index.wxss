.message-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
}

.message-ava {
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  overflow: hidden;
}

.message-info {
  width: calc(100% - 90rpx);
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.message-info .p:nth-child(1) {
  font-size: 28rpx;
  color: #000;
}

.message-info .p:nth-child(2) {
  font-size: 24rpx;
  color: #999;
}

.message-info .p:nth-child(3) {
  font-size: 28rpx;
  color: #000;
  margin-bottom: 30rpx;
}

.message-re {
  background: #f5f5f5;
  border-radius: 4rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  margin-bottom: 30rpx;
}

.message-info .message-re .p {
  font-size: 26rpx;
  color: #000;
  display: block;
}

.message-info .message-re .span {
  font-size: 26rpx;
  color: var(--main-bg-color);
}