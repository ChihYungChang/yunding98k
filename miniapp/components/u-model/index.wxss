.model-g {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.model-view {
  width: 650rpx;
  background: #fff;
  animation: 0.25s forwards show;
  transform: scale(0) translate3d(0, 0, 0);
}

@keyframes show {
  0% {
    transform: scale(0) translate3d(0, 0, 0);
  }

  100% {
    transform: scale(1) translate3d(0, 0, 0);
  }
}

.model-title {
  font-size: 32rpx;
  color: #333;
  width: 100%;
  height: 100rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
}

.model-body {
  min-height: 150rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

.model-btn-g {
  width: 100%;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.model-btn {
  flex: 1;
  box-sizing: border-box;
  margin: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  height: calc(100% - 60rpx);
  background: var(--main-bg-color);
  border-radius: 6rpx;
  color: #fff;
}

.esc .model-btn {
  margin: 30rpx 15rpx 30rpx 30rpx;
  background: #fff;
  border: 1px solid var(--main-bg-color);
  color: var(--main-bg-color);
}

.esc .model-btn:nth-child(2) {
  margin: 30rpx 30rpx 30rpx 15rpx;
  background: var(--main-bg-color);
  color: #fff;
}