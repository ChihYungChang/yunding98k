.bar {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  overflow: hidden;
  background: #efefef;
}

.bar-inner {
  border-radius: 20rpx;
  width: 0rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  position: relative;
  transition-timing-function: ease-in-out;
  background: linear-gradient(to left, var(--main-bg-color), var(--main-bg-color-dark));
}

.bar-inner .text {
  font-size: 20rpx;
  margin-right: 10rpx;
  color: #fff;
}